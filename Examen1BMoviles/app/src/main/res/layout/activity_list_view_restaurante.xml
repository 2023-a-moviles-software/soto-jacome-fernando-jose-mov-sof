<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListViewRestaurante">

    <ListView
        android:id="@+id/lv_list_view_restaurante"
        android:layout_width="318dp"
        android:layout_height="228dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="48dp" />

    <Button
        android:id="@+id/btn_aniadir_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="@+id/input_michelin"
        app:layout_constraintStart_toStartOf="@+id/input_michelin"
        tools:layout_editor_absoluteY="650dp" />

    <EditText
        android:id="@+id/input_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Ingrese Id"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/lv_list_view_restaurante"
        tools:layout_editor_absoluteX="100dp" />

    <EditText
        android:id="@+id/input_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:hint="Ingrese nombre"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/lv_list_view_restaurante"
        tools:layout_editor_absoluteX="100dp" />

    <EditText
        android:id="@+id/input_direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:ems="10"
        android:hint="Ingrese direccion"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/lv_list_view_restaurante"
        tools:layout_editor_absoluteX="100dp" />

    <EditText
        android:id="@+id/input_ciudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="256dp"
        android:ems="10"
        android:hint="Ingrese ciudad"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/lv_list_view_restaurante"
        tools:layout_editor_absoluteX="100dp" />

    <EditText
        android:id="@+id/input_michelin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="312dp"
        android:ems="10"
        android:hint="Ingrese estrellas michelin"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/lv_list_view_restaurante"
        tools:layout_editor_absoluteX="100dp" />

    <TextView
        android:id="@+id/txt_titulo_restaurantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Resturantes"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese datos de nuevo restaurante"
        app:layout_constraintBottom_toTopOf="@+id/input_id"
        app:layout_constraintEnd_toEndOf="@+id/lv_list_view_restaurante"
        app:layout_constraintStart_toStartOf="@+id/lv_list_view_restaurante"
        app:layout_constraintTop_toBottomOf="@+id/lv_list_view_restaurante" />

</androidx.constraintlayout.widget.ConstraintLayout>