<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_user_nombre_logro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Mateo"
            app:layout_constraintStart_toEndOf="@+id/iv_imagenLogro"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_hora_logro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="2h"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@+id/tv_user_nombre_logro"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nombre_logro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:text="CompletÃ³ cinco serie de 10 minutos cada uno"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@+id/iv_imagenLogro"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_nombre_logro" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_imagenLogro"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"

            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            android:scaleType="centerCrop"
            android:layout_gravity="center"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>